{
  "appium_server_url": "http://127.0.0.1:4723",
  "capabilities_json_path": "automation_service/mobile_examples/android_capabilities.example.json",
  "profile_json_path": "automation_service/mobile_examples/hinge_agent_profile.direct_intentional.example.json",

  "command_query": "Go to discover. Send message now. Live run for 6 actions.",
  "decision_engine": {
    "type": "deterministic"
  },

  "artifacts_dir": "artifacts/live_hinge_comment_probe",
  "target_package": "co.hinge.app",
  "target_activity": ".ui.AppActivity",
  "foreground_recovery": {
    "enabled": true,
    "max_attempts": 5,
    "cooldown_s": 1.0
  },
  "pause_before_start": false,
  "dry_run": false,
  "max_runtime_s": 240,
  "max_actions": 6,
  "loop_sleep_s": 1.0,
  "capture_each_action": true,
  "persist_packet_log": true,
  "packet_capture_screenshot": true,
  "packet_capture_xml": true,
  "profile_bundle_capture": {
    "enabled": true,
    "max_views": 6,
    "stop_after_unchanged": 2,
    "swipe_duration_ms": 650,
    "swipe_margin_pct": 0.12,
    "settle_sleep_s": 0.35
  },
  "validation": {
    "enabled": true,
    "post_action_sleep_s": 0.8,
    "require_screen_change_for": [
      "like",
      "pass",
      "open_thread",
      "send_message",
      "back",
      "dismiss_overlay"
    ],
    "max_consecutive_failures": 4
  },

  "locators": {
    "discover_tab": [
      {
        "using": "accessibility id",
        "value": "Discover"
      },
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().descriptionContains(\"Discover\")"
      }
    ],
    "matches_tab": [
      {
        "using": "accessibility id",
        "value": "Matches"
      },
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().descriptionContains(\"Matches\")"
      }
    ],
    "likes_you_tab": [
      {
        "using": "accessibility id",
        "value": "Likes You"
      }
    ],
    "standouts_tab": [
      {
        "using": "accessibility id",
        "value": "Standouts"
      }
    ],
    "profile_hub_tab": [
      {
        "using": "accessibility id",
        "value": "Profile Hub"
      }
    ],
    "like": [
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().descriptionContains(\"Like\")"
      }
    ],
    "pass": [
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().descriptionContains(\"Skip\")"
      }
    ],
    "open_thread": [
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().textContains(\"Send\")"
      },
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().textContains(\"Message\")"
      }
    ],
    "message_input": [
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().textContains(\"Type a message\")"
      }
    ],
    "send": [
      {
        "using": "accessibility id",
        "value": "Send"
      },
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().textContains(\"Send\")"
      }
    ],
    "overlay_close": [
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().descriptionContains(\"Close sheet\")"
      },
      {
        "using": "accessibility id",
        "value": "Close"
      },
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().textContains(\"Close\")"
      }
    ],
    "discover_message_input": [
      {
        "using": "accessibility id",
        "value": "Edit comment"
      },
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().descriptionContains(\"Edit comment\")"
      },
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().textContains(\"Add a comment\")"
      }
    ],
    "discover_send": [
      {
        "using": "accessibility id",
        "value": "Send like"
      },
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().descriptionContains(\"Send like\")"
      },
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().textContains(\"Send Like\")"
      }
    ]
  }
}

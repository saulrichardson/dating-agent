{
  "appium_server_url": "http://127.0.0.1:4723",
  "capabilities_json_path": "automation_service/mobile_examples/android_capabilities.example.json",
  "profile_json_path": "automation_service/mobile_examples/hinge_agent_profile.creative_playful.example.json",

  "command_query": "Autonomous swipe and opener run for 25 actions. Prefer profiles with specific prompts. Send a personalized first message only when confidence is high.",
  "decision_engine": {
    "type": "llm",
    "llm_failure_mode": "fallback_deterministic",
    "llm": {
      "model": "gpt-4.1-mini",
      "temperature": 0.2,
      "timeout_s": 40,
      "api_key_env": "OPENAI_API_KEY",
      "base_url": "https://api.openai.com",
      "include_screenshot": true,
      "image_detail": "auto",
      "max_observed_strings": 140
    }
  },

  "artifacts_dir": "artifacts/live_hinge_autonomous_swipe",
  "pause_before_start": false,
  "dry_run": true,
  "max_runtime_s": 600,
  "max_actions": 25,
  "loop_sleep_s": 1.0,
  "capture_each_action": true,
  "persist_packet_log": true,
  "packet_capture_screenshot": true,
  "packet_capture_xml": false,
  "validation": {
    "enabled": true,
    "post_action_sleep_s": 0.8,
    "require_screen_change_for": [
      "like",
      "pass",
      "open_thread",
      "send_message",
      "back"
    ],
    "max_consecutive_failures": 4
  },

  "locators": {
    "discover_tab": [
      {
        "using": "accessibility id",
        "value": "Discover"
      },
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().descriptionContains(\"Discover\")"
      }
    ],
    "matches_tab": [
      {
        "using": "accessibility id",
        "value": "Matches"
      },
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().descriptionContains(\"Matches\")"
      }
    ],
    "likes_you_tab": [
      {
        "using": "accessibility id",
        "value": "Likes You"
      }
    ],
    "standouts_tab": [
      {
        "using": "accessibility id",
        "value": "Standouts"
      }
    ],
    "profile_hub_tab": [
      {
        "using": "accessibility id",
        "value": "Profile Hub"
      }
    ],
    "like": [
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().descriptionContains(\"Like\")"
      },
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().textContains(\"Like\")"
      }
    ],
    "pass": [
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().descriptionContains(\"Skip\")"
      },
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().descriptionContains(\"Pass\")"
      }
    ],
    "open_thread": [
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().textContains(\"Message\")"
      },
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().textContains(\"Send\")"
      }
    ],
    "message_input": [
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().textContains(\"Type a message\")"
      }
    ],
    "send": [
      {
        "using": "accessibility id",
        "value": "Send"
      },
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().textContains(\"Send\")"
      }
    ],
    "discover_message_input": [
      {
        "using": "accessibility id",
        "value": "Edit comment"
      },
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().descriptionContains(\"Edit comment\")"
      },
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().textContains(\"Add a comment\")"
      }
    ],
    "discover_send": [
      {
        "using": "accessibility id",
        "value": "Send like"
      },
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().descriptionContains(\"Send like\")"
      },
      {
        "using": "-android uiautomator",
        "value": "new UiSelector().textContains(\"Send Like\")"
      }
    ]
  }
}
